{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application",
  "main": "app.js",
  "scripts": {
    "start:dev": "nodemon --exec babel-node server/",
    "build": "babel src --out-dir build",
    "test": "nyc mocha --require @babel/register server/test/*.js --exit || true",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vincentiroleh/banka.git"
  },
  "keywords": [
    "banking",
    "light-weight",
    "app",
    "nodejs",
    "expressJS",
    "mocha",
    "chai"
  ],
  "author": "Vincent Iroleh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vincentiroleh/banka/issues"
  },
  "homepage": "https://github.com/vincentiroleh/banka#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "date-time": "^3.1.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "mocha": "^6.0.2",
    "morgan": "^1.9.1",
    "validator": "^10.11.0"
  }
}
